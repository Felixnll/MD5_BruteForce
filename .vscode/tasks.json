{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-java",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "target/classes",
                "src/main/java/MD5_BruteForce/*.java"
            ],
            "isBackground": false,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+): error: (.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^javac",
                    "endsPattern": "^\\s*$"
                }
            }
        },
        {
            "label": "run-Main_Server",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "target/classes",
                "MD5_BruteForce.Main_Server"
            ],
            "dependsOn": ["build-java"],
            "isBackground": false,
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}

